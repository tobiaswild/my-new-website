  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "Components/*": ["./components/*"],
      "Lib/*": ["./lib/*"],
      "Public/*": ["./public/*"],
      "Styles/*": ["./styles/*"]
    }
  }
}
